{
  "name": "viet-stock-api",
  "version": "1.0.0",
  "description": "Vietnamese Stock Data API with Vercel Postgres",
  "type": "module",
  "scripts": {
    "build": "echo 'Build complete'",
    "dev": "vercel dev",
    "dev:api": "node api/api-server-simple.js",
    "db:migrate": "node scripts/db-migrate.js",
    "db:seed": "node scripts/db-seed.js",
    "db:alter-models": "node scripts/db-alter-stock-models.js",
    "update:prices": "node scripts/update-prices.js",
    "update:prices:stocks": "node scripts/update-prices.js --stocks-only",
    "update:prices:full": "node scripts/update-prices.js --days=365 --concurrent=5"
  },
  "engines": {
    "node": "20.x"
  },
  "devDependencies": {
    "vercel": "^41.0.0"
  },
  "dependencies": {
    "@neondatabase/serverless": "^0.10.4",
    "@vercel/postgres": "^0.10.0",
    "dotenv": "^16.4.5",
    "jsonwebtoken": "^9.0.3"
  }
}
